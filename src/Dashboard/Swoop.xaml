<UserControl x:Class="Dashboard.Swoop"
             x:Name="SwoopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Path x:Name="SwoopPath" 
          Fill="{Binding Fill, Mode=OneWay, ElementName=SwoopControl}"
          Width="{Binding Width, Mode=OneWay, ElementName=SwoopControl}"
          Height="{Binding Height, Mode=OneWay, ElementName=SwoopControl}" />
</UserControl>
